{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Notes FrontMatter",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "created": {
      "type": "string",
      "format": "date"
    },
    "updated": {
      "type": "string",
      "format": "date"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "source": {
      "type": "string",
      "pattern": "^(|https?://.+)$",
      "description": "空文字または HTTP(S) URL を許容"
    },
    "source_retrieved": {
      "type": "string",
      "format": "date"
    }
  },
  "required": ["title", "created", "updated", "tags"],
  "additionalProperties": true
}
