{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Profile",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "AI プロファイルを識別する名称"
    },
    "description": {
      "type": "string",
      "description": "プロファイルの概要"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "最終更新日 (YYYY-MM-DD)"
    }
  },
  "required": ["name", "updated"],
  "additionalProperties": false
}
