{
  // 📝 エディター基本設定
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // 🎨 Prettier設定（既存Linterと競合回避）
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": true,
  // 📄 Markdown設定（Prettierでフォーマット、markdownlintで品質チェック）
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 80,
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "files.trimTrailingWhitespace": false
  },
  // 🗂️ YAML設定（Prettierでフォーマット、yamllintで品質チェック）
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoIndent": "advanced"
  },
  "[yml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoIndent": "advanced"
  },
  // 📋 JSON設定（Prettierでフォーマット）
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // 🔧 Markdownlint設定（品質チェック専用）
  "markdownlint.config": {
    "extends": "./.markdownlint.jsonc"
  },
  // 🔍 YAML拡張設定
  "yaml.validate": true,
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": "/.github/workflows/*",
    "./schemas/ai_profile.schema.json": "ai/**/*.json",
    "./schemas/notes.schema.json": "notes/**/*.json"
  },
  // 🚫 不要な警告を抑制
  "python.defaultInterpreterPath": "/usr/bin/python3",
  // 📁 ファイル除外設定
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true
  },
  // 🔎 検索除外設定
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/__pycache__": true
  }
}
