{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Edit(.env)",
      "Edit(.env.*)",
      "Edit(**/.env)",
      "Edit(**/.env.*)",
      "Write(.env)",
      "Write(.env.*)",
      "Write(**/.env)",
      "Write(**/.env.*)",
      "Read(secrets/**)",
      "Read(**/secrets/**)",
      "Edit(secrets/**)",
      "Edit(**/secrets/**)",
      "Write(secrets/**)",
      "Write(**/secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(sudo *)",
      "Bash(ssh *)",
      "Bash(scp *)",
      "Bash(git push --force)",
      "Bash(git push --force *)",
      "Bash(git push -f)",
      "Bash(git push -f *)",
      "Bash(git reset --hard)",
      "Bash(git reset --hard *)",
      "Bash(env)",
      "Bash(printenv)",
      "Bash(export *)",
      "Bash(bash -c *)",
      "Bash(sh -c *)",
      "Bash(base64 *)",
      "Bash(terraform *)",
      "Bash(kubectl *)",
      "Bash(aws *)",
      "Bash(nc *)",
      "Bash(ping *)",
      "Bash(dig *)",
      "Bash(nslookup *)"
    ],
    "ask": [
      "Bash(git checkout *)",
      "Bash(git merge *)",
      "Bash(psql *)",
      "Bash(mysql *)",
      "Bash(docker compose *)",
      "Bash(docker-compose *)"
    ],
    "allow": [
      "Bash(node *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(python *)",
      "Bash(pytest *)",
      "Bash(make *)",
      "Bash(gomi *)"
    ]
  },
  "hooks": {
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bin/suggest-claude-md-hook.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bin/suggest-claude-md-hook.sh"
          }
        ]
      }
    ]
  }
}
