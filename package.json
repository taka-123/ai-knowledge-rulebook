{
  "name": "ai-knowledge-rulebook",
  "version": "1.0.0",
  "description": "AI学習ノートとルール管理リポジトリ",
  "private": true,
  "scripts": {
    "format": "./format.sh fix",
    "format:check": "./format.sh check",
    "lint": "npm run format:check",
    "lint:md": "markdownlint-cli2 '**/*.md' '#node_modules' '#.git'",
    "lint:yaml": "yamllint -c ./.config/.yamllint.yml .",
    "lint:json": "prettier --check '**/*.{json,jsonc}' --ignore-path .prettierignore",
    "fix": "npm run format",
    "fix:md": "markdownlint-cli2-fix '**/*.md' '#node_modules' '#.git'",
    "fix:yaml": "prettier --write '**/*.{yml,yaml}' --ignore-path .prettierignore",
    "fix:json": "prettier --write '**/*.{json,jsonc}' --ignore-path .prettierignore",
    "schema:check": "find ai -name '*.json' -type f -print0 2>/dev/null | xargs -0 -r check-jsonschema --schemafile schemas/ai_profile.schema.json; find notes -name '*.json' -type f -print0 2>/dev/null | xargs -0 -r check-jsonschema --schemafile schemas/notes.schema.json; true"
  },
  "devDependencies": {
    "markdownlint-cli2": "^0.15.0",
    "prettier": "^3.4.2",
    "ajv-cli": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
